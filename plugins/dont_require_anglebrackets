#!/usr/bin/perl
 
=head1 NAME

dont_require_anglebrackets 

=head1 SYNOPSIS

accept addresses in MAIL FROM:/RCPT TO: commands without surrounding <>

=cut

sub hook_mail_pre {
    my ($self,$transaction, $addr) = @_;
    unless ($addr =~ /^<.*>$/) {
        $addr = "<".$addr.">";
    }
    return (OK, $addr);
}

sub hook_rcpt_pre {
    my ($self,$transaction, $addr) = @_;
    unless ($addr =~ /^<.*>$/) {
        $addr = "<".$addr.">";
    }
    return (OK, $addr);
}
